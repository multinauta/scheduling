<div class="card text-center custom-login-card shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-title">
    <h3><%= t("devise.forgot_your_password") %></h3>
  </div>
  <div class="card-body" id="login-form">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <br>
    <%= f.submit t("devise.send_me_reset_password_instructions"), class: "btn btn-primary" %>
  </div>
<% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
