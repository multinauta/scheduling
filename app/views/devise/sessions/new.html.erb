
<div class="card text-center custom-login-card shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-title">
    <h3><%= t("devise.log_in") %></h3>
  </div>
  <div class="card-body" id="login-form">
    <%= form_for(resource_name, url: session_path(resource_name), method: :post) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
      <%= f.label t("devise.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.check_box :remember_me %>
      <%= f.label t("devise.remember_me") %>
      <%= f.submit t("devise.log_in"), class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>



