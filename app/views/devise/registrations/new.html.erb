
<div class="card text-center custom-login-card shadow-lg p-3 mb-5 bg-white rounded">
  <div class="card-title">
    <h3><%= t("devise.log_in") %></h3>
  </div>
  <div class="card-body" id="login-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t("devise.password") %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t("devise.characters_minimum") %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <br>
    <%= f.submit t("devise.sign_up"), class: "btn btn-primary" %>
  </div>
<% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>








